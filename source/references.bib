  author = {Amenta, Francesco and Parnetti, Lucilla and Gallai, Virgilio and Wallin, Anders},
  date = {2001-11-01},
  journaltitle = {Mechanisms of Ageing and Development},
  shortjournal = {Mechanisms of Ageing and Development},
  volume = {122},
