@article{bubu2017,
  title = {Sleep, {{Cognitive}} Impairment, and {{Alzheimer}}’s Disease: {{A Systematic Review}} and {{Meta-Analysis}}},
  shorttitle = {Sleep, {{Cognitive}} Impairment, and {{Alzheimer}}’s Disease},
  author = {Bubu, Omonigho M. and Brannick, Michael and Mortimer, James and Umasabor-Bubu, Ogie and Sebastião, Yuri V. and Wen, Yi and Schwartz, Skai and Borenstein, Amy R. and Wu, Yougui and Morgan, David and Anderson, William M.},
  date = {2017-01-01},
