}

@article{gonzalez2018,
  title = {Theta Bursts Precede, and Spindles Follow, Cortical and Thalamic Downstates in Human {{NREM}} Sleep},
  author = {Gonzalez, Christopher E. and Mak-McCully, Rachel A. and Rosen, Burke Q. and Cash, Sydney S. and Chauvel, Patrick Y. and Bastuji, Hélène and Rey, Marc and Halgren, Eric},
  date = {2018-11-14},
  journaltitle = {Journal of Neuroscience},
