  keywords = {Dementia,Drug development},
  file = {/Users/anastuart/Zotero/storage/626LEYSW/Sevigny et al. - 2016 - The antibody aducanumab reduces Aβ plaques in Alzh.pdf}
}

@article{shirayama2019,
