@article{dressle2023,
  title = {Hyperarousal in Insomnia Disorder: {{Current}} Evidence and Potential Mechanisms},
  shorttitle = {Hyperarousal in Insomnia Disorder},
  author = {Dressle, Raphael J. and Riemann, Dieter},
