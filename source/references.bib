  author = {Gorlova, Sofya and Ichiba, Tomohisa and Nishimaru, Hiroshi and Takamura, Yusaku and Matsumoto, Jumpei and Hori, Etsuro and Nagashima, Yoshinao and Tatsuse, Tsuyoshi and Ono, Taketoshi and Nishijo, Hisao},
