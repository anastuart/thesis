@article{bernardi2019,
  title = {Regional Delta Waves in Human Rapid Eye Movement Sleep},
  author = {Bernardi, Giulio and Betta, Monica and Ricciardi, Emiliano and Pietrini, Pietro and Tononi, Giulio and Siclari, Francesca},
